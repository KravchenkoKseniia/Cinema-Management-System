@model IEnumerable<Cinema_System.DTOs.MovieDTO>

<h2>Local Movies</h2>

<a asp-action="TmdbSearch" class="btn btn-primary">Search Movies on TMDB</a>

@if (!Model.Any())
{
    <p>No movies found in the database.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.ReleaseDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-info">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
